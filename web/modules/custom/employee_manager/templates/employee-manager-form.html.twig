<div class="w-50">
  <!-- Hidden ID Field -->

  {{ form.id }}
  <!-- Employee Name Field -->
  <div class="form-group">
    <label for="{{ form.name['#id'] }}" class="form-label font-weight-bold">
      {{ form.name['#title'] }}
      <span class="text-danger">{{ form.name['#required'] ? '*' : '' }}</span>
    </label>
    <input type="{{ form.name['#type'] }}" id="edit-name" name="{{ form.name['#name'] }}" value="{{ form.name['#value'] }}"
      class="form-control" required="{{ form.name['#required'] }}" placeholder="Enter employee name">
  </div>

  <!-- Employee Email Field -->
  <div class="form-group">
    <label for="{{ form.email['#id'] }}" class="form-label font-weight-bold">
      {{ form.email['#title'] }}
      <span class="text-danger">{{ form.email['#required'] ? '*' : '' }}</span>
    </label>
    <input type="{{ form.email['#type'] }}" id="edit-name" name="{{ form.email['#name'] }}" value="{{ form.email['#value'] }}"
      class="form-control" required="{{ form.email['#required'] }}" placeholder="Enter employee name">
  </div>


  <!-- Employee Role Field -->
  {# {{form.role}} #}
  <div class="form-group">
    <label for="{{ form.role['#id'] }}" class="form-label font-weight-bold"> {{ form.role['#title'] }}</label>
    <select id="{{ form.role['#id'] }}" name="{{ form.role['#name'] }}" class="custom-select">
      {% for value, label in form.role['#options'] %}
      <option value="{{ value }}" {% if value==form.role['#default_value'] %}selected{% endif %}>
        {{ label|render }}
      </option>
      {% endfor %}
    </select>
  </div>



  <!-- Submit Button -->
  <div class="form-group text-center">
    <button "{{ form.submit['#type'] }}" class="btn btn-primary btn-block">
      {{ form.submit['#value'] }}
    </button>
  </div>

  <!-- Hidden Tokens -->
  <input type="hidden" name="form_token" value="vtSzZrgfNAYXCicKR3VkZavEYK9lTpSH6mBxPPJdCBk">
  <input type="hidden" name="form_id" value="employee_manager_form">

</div>


