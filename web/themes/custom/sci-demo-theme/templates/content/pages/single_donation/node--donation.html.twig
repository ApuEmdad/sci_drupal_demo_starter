<!-- Start Causes Single
    ============================================= -->
    {{dump(content)}}
<div class="causes-single-area default-padding">
	<div class="container">
		<div class="causes-single-items">
			<div class="row">
				<div
					class="col-lg-8 content">

					<!-- Start Donation Details -->
					<div class="info">
						{# <img src="assets/img/causes/11.jpg" alt="Thumb"> #}
						<img src="{{donation_cover_image_url}}" alt="Thumb">
						<div class="top-entry">
							<div class="date">
								<i class="fas fa-clock"></i>
								<strong>Created :
								</strong>
								Jul 15, 2020
							</div>
							<div class="location">
								<i class="fas fa-map-marker-alt"></i>
								<strong>Location :
								</strong>
								Mombasa, Africa
							</div>
						</div>
						<h4>{{content.field_donation_title}}</h4>
						<p>
							{{content.field_donation_description}}
						</p>
						<a class="btn circle btn-theme border btn-md" href="/donor-form/{{ node.id }}">Donate Now</a>
					</div>
					<!-- End Donation Details -->

					<!-- Start Donation Comments -->
					<div class="comments">
						<div class="comments-area">
							<div class="comments-title">
								<h4>
									5 comments
								</h4>

								<!-- Start Donation Comment List -->
								{% for i in range(0,2) %}
									<div class="comments-list">
										<div class="commen-item">
											<div class="avatar">
												<img src="assets/img/teams/2.jpg" alt="Author">
											</div>
											<div class="content">
												<div class="title">
													<h5>Jonathom Doe</h5>
													<span>
														<i class="fas fa-clock"></i>
														28 Aug, 2020</span>
												</div>
												<p>
													Delivered ye sportsmen zealously arranging frankness estimable as. Nay any article enabled musical shyness yet sixteen yet blushes. Entire its the did figure wonder off.
												</p>
											</div>
										</div>
									</div>
								{% endfor %}
								<!-- End Donation Comment Lists -->
							</div>

							<!-- Start Donation Form -->
							<div class="comments-form">
								<div class="title">
									<h4>Leave a comments</h4>
								</div>
								<form action="#" class="contact-comments">
									<div class="row">
										<div class="col-md-6">
											<div
												class="form-group">
												<!-- Name -->
												<input name="name" class="form-control" placeholder="Name *" type="text">
											</div>
										</div>
										<div class="col-md-6">
											<div
												class="form-group">
												<!-- Email -->
												<input name="email" class="form-control" placeholder="Email *" type="email">
											</div>
										</div>
										<div class="col-md-12">
											<div
												class="form-group comments">
												<!-- Comment -->
												<textarea class="form-control" placeholder="Comment"></textarea>
											</div>
											<div class="form-group full-width submit">
												<button type="submit">
													Post Comments
												</button>
											</div>
										</div>
									</div>
								</form>
							</div>
							<!-- End Donation Form -->

						</div>
					</div>
					<!-- End Donation Comments -->


				</div>

				<!-- Start Donation Sidebar -->
				<div class="col-lg-4 sidebar">
					<aside>
						<div class="item">
							<div class="progress-box">
								<p>Raised : $6,230
									<span class="float-right">Goal : $8,400</span>
								</p>
								<div class="progress">
									<div class="progress-bar" role="progressbar" data-width="87"></div>
								</div>
								<span>Fund collect : 87%</span>
							</div>
						</div>
						<div class="item">
							<h4>Select Ammount</h4>
							<form action="#">
								<ul>
									<li>
										<button type="button" class="form-btn active">$10</button>
									</li>
									<li>
										<button type="button" class="form-btn inactive">$25</button>
									</li>
									<li>
										<button type="button" class="form-btn inactive">$50</button>
									</li>
									<li>
										<button type="button" class="form-btn inactive">$100</button>
									</li>
								</ul>
								<input class="form-control" id="custom-ammount" name="custom-ammount" placeholder="Custom Ammount" type="text">
								<button
                  type="button"
                  name="submit"
                  id="submit"
                  onclick="window.location.href='/donor-form/{{ node.id }}';">
                  Donate Now
                </button>

							</form>
						</div>
						<div class="item">
							<h4>Recent Donation</h4>
							<!-- Donator Starts -->
							{% for i in range (0,3) %}
								<div class="donator">
									<div class="thumb">
										<img src="{{ file_url(directory ~ '/assets/img/banner/6.jpg') }}" alt="Thumb">
									</div>
									<div class="info">
										<h5>$17</h5>
										<ul>
											<li>
												<strong>Jonathom Doe</strong>
											</li>
											<li>12 Minutes Ago</li>
										</ul>
									</div>
								</div>
							{% endfor %}

							<!-- Donator Ends -->

							<a href="#">View All
								<i class="fas fa-angle-right"></i>
							</a>
						</div>
					</aside>
				</div>

				<!-- End Donation Sidebar -->

			</div>
		</div>
	</div>
</div>
<div class="donor-form">
  {{ donor_form_block }}
</div>
