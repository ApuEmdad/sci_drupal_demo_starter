{% if items %}
	<div class="donation-pagi text-center col-lg-12">
		<div class="row">
			<div class="col-lg-12">
				<nav aria-label="navigation">
					<ul
						class="pagination">
						{# Print first item if we are not on the first page. #}
						{% if items.first %}
							<li class="page-item">
								<a class="page-link" href="{{ items.first.href }}" title="{{ 'Go to first page'|t }}">
									<i class="fas fa-angle-double-left"></i>
									<span class="visually-hidden">{{ 'First page'|t }}</span>
									<span aria-hidden="true">{{ items.first.text|default('« First'|t) }}</span>

								</a>
							</li>
						{% endif %}

						{# Print previous item if we are not on the first page. #}
						{% if items.previous %}
							<li class="page-item">
								<a class="page-link" href="{{ items.previous.href }}" title="{{ 'Go to previous page'|t }}" rel="prev">
									<i class="fas fa-angle-left"></i>
									<span class="visually-hidden">{{ 'Previous page'|t }}</span>
								</a>
							</li>
						{% endif %}

						{# Add an ellipsis if there are further previous pages. #}
						{% if ellipses.previous %}
							<li class="page-item">
								<span class="page-link" role="presentation">&hellip;</span>
							</li>
						{% endif %}

						{# Now generate the actual pager pieces. #}
						{% for key, item in items.pages %}
							<li class="page-item{{ current == key ? ' active' : '' }}">
								<a class="page-link" href="{{ item.href }}" title="{{ current == key ? 'Current page'|t : 'Go to page @key'|t({'@key': key}) }}">
									{{- key -}}
								</a>
							</li>
						{% endfor %}

						{# Add an ellipsis if there are further next pages. #}
						{% if ellipses.next %}
							<li class="page-item">
								<span class="page-link" role="presentation">&hellip;</span>
							</li>
						{% endif %}

						{# Print next item if we are not on the last page. #}
						{% if items.next %}
							<li class="page-item">
								<a class="page-link" href="{{ items.next.href }}" title="{{ 'Go to next page'|t }}" rel="next">
									<i class="fas fa-angle-right"></i>
									<span class="visually-hidden">{{ 'Next page'|t }}</span>
								</a>
							</li>
						{% endif %}

						{# Print last item if we are not on the last page. #}
						{% if items.last %}
							<li class="page-item">
								<a class="page-link" href="{{ items.last.href }}" title="{{ 'Go to last page'|t }}">
									<span aria-hidden="true">{{ items.last.text|default('Last »'|t) }}</span>
									<i class="fas fa-angle-double-right"></i>
									<span class="visually-hidden">{{ 'Last page'|t }}</span>
								</a>
							</li>
						{% endif %}
					</ul>
				</nav>
			</div>
		</div>
	</div>
{% endif %}
