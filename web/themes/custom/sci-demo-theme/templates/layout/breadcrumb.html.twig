{% if breadcrumb %}
<div class="breadcrumb-area text-center shadow dark bg-fixed padding-xl text-light"
  style="background-image: url('{{ file_url(directory ~ '/assets/img/banner/6.jpg') }}">
  <div class="container">
    <div class="breadcrumb-items">
      <div class="row">
        <div class="col-lg-12">
          <h2>{{page_title}}</h2>
        </div>
      </div>
      <ul class="breadcrumb">
        {% for item in breadcrumb %}
          {% if item.url %}
            <li>
              <a href="{{ item.url }}">
                {% if loop.first %}
                  <i class="fas fa-home"></i>
                {% endif %}
                {{ item.text }}
              </a>
            </li>
          {% else %}
            <li class="active">
              {{ item.text }}
            </li>
          {% endif %}
        {% endfor %}
      </ul>

    </div>
  </div>
</div>
{% endif %}
